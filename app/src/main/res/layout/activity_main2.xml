<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#173A87"
    tools:context=".GameScreen">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/imgHelp1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="20dp"
                        android:onClick="trogiup5050"
                        android:padding="8dp"
                        android:src="@drawable/trogiup5050" />
                    <ImageView
                        android:id="@+id/imgHelp2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="20dp"
                        android:onClick="troGiupKhanGia"
                        android:padding="8dp"
                        android:src="@drawable/trogiupkhangia"
                        app:tint="#fff" />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/logo"/>
                    <ImageView
                        android:id="@+id/imgHelp3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:onClick="trogiupDoiCauHoi"
                        android:padding="8dp"
                        android:src="@drawable/trogiudoicauhoi"
                        app:tint="#fff" />

                    <ImageView
                        android:id="@+id/imgHelp4"
                        android:onClick="dungCuocChoi"
                        android:layout_width="49dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="20dp"
                        android:padding="8dp"
                        android:src="@drawable/stop"
                        />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/txvCauHoi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:layout_margin="20dp"
                        android:background="@drawable/bg_btn"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_centerInParent="true"
                        android:background="#E4E4DF" />
                    <TextView
                        android:id="@+id/txvCauTL1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/bg_btn"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center">
                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#E4E4DF"/>

                    <TextView
                        android:id="@+id/txvCauTL2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/bg_btn"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center">
                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#E4E4DF"/>

                    <TextView
                        android:id="@+id/txvCauTL3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/bg_btn"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center">
                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#E4E4DF"/>
                    <TextView
                        android:id="@+id/txvCauTL4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/bg_btn"
                        android:text=""
                        android:textColor="#fff"
                        android:gravity="center"
                        android:textSize="18sp"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/txvThuaGame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="dsadsads"
            android:background="#2B41C8"/>
        <Button
            android:id="@+id/btnMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="570dp"
            android:background="@drawable/bg_btn"
            android:onClick="backToMenu"
            android:text="Menu"
            android:textStyle="bold"
            android:visibility="gone" />
        <Button
            android:id="@+id/btnRepaly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="620dp"
            android:background="@drawable/bg_btn"
            android:onClick="replayGame"
            android:text="Replay"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:background="#2B41C8"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:gravity="center"
        android:padding="10dp"
        >
        <ListView
            android:id="@+id/lsvTienThuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>